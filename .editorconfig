root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{js,jsx,ts,tsx}]
quote_type = single

[*.{py}]
indent_size = 4

[*.{java}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
quote_type = double
